#!/usr/bin/env node

var require = require('esm')(module /*, options */);

const { access, constants } = require('fs');
const { promisify } = require('util');
const { join } = require('path');
const { blocks , folder, file, log, prettify, run } = require('@collabo-community/building-blocks');

// const { config } = require('@collabo-community/building-blocks/config/settings/cli.js');

const { argv, env } = process;
const fs_access = promisify(access);

const collabo_cli = {
    script: {
        start: async () => {
            const npmLifeCycleEvent = env.npm_lifecycle_event;
            console.log('npmLifeCycleEvent: ', npmLifeCycleEvent);
            let prodCmd = npmLifeCycleEvent === blocks.cli.script.prod;
            let BlocksCommand = npmLifeCycleEvent !== blocks.cli.script.prod;
            let script = prodCmd ? blocks.cli.script.prod : blocks.cli.script.dev; // (TODO: prevent folder creation if script is missing) blocks.cli.script.prod : '';
            console.log({ prodCmd, BlocksCommand, script });
            blocks.cli.config.set({ settings: { cli: { isDevMode: BlocksCommand, script }} });
        },
        error: ({ message }) => {
            log.error(`${message}`);
        },
    },
    run: async ({ next, error }) => {
        try {
            //
            next();
        } catch(err) {
            error({ err });
        }
    },
};

collabo_cli.run({
    next: () => {
        collabo_cli.script.start();
    },
    error: ({ err }) => {
        collabo_cli.script.error({ message: err.message });
    }
});


